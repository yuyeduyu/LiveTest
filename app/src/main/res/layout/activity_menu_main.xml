<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_backgroud"
    android:orientation="vertical">

    <!--toolbar-->
    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_notice"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_notice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="设备连接异常"
                android:textColor="@color/statu_red"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_dev"
            style="@style/set_text"
            android:layout_height="44dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="设备状态"
                android:textColor="@color/text1"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/arrow_right" />

            <TextView
                android:id="@+id/dev_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/iv_arrow"
                android:textColor="@color/text1"
                android:textSize="@dimen/text_14"
                tools:text="请连接设备" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="@color/view_backgroud"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:id="@+id/rl_upload"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/view_backgroud"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务器连接状态:"
                    android:textColor="@color/text3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/upload_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="未连接"
                    android:textColor="@color/text3"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电量情况:"
                    android:textColor="@color/text3"
                    android:textSize="12sp" />

                <ProgressBar
                    android:id="@+id/pb_volue"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar_layer_list" />

                <TextView
                    android:id="@+id/tv_volue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    tools:text="10%" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备连接状态:"
                android:textColor="@color/text3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bluestatu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="未连接"
                android:textColor="@color/text3"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@color/view_backgroud"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_main"
                style="@style/superview_item_layout"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/caiji" />

                <TextView
                    style="@style/superview_item_text"
                    android:text="信息采集" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_log"
                style="@style/superview_item_layout"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_log"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/rizhi" />

                <TextView
                    style="@style/superview_item_text"
                    android:text="监测日志" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bukong"
                style="@style/superview_item_layout"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_bukong"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/bukong" />

                <TextView
                    style="@style/superview_item_text"
                    android:text="布控目标" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fenxi"
                style="@style/superview_item_layout"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_fenxi"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/fenxi" />

                <TextView
                    style="@style/superview_item_text"
                    android:text="云查询" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <LinearLayout
                android:id="@+id/ll_tongji"
                style="@style/superview_item_layout"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_tongji"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/tongji" />

                <TextView
                    style="@style/superview_item_text"
                    android:text="统计" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/set"
                style="@style/superview_item_layout"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/shezhi" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/superview_item_text"
                    android:text="设置" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about"
                style="@style/superview_item_layout"
                android:layout_weight="1"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/guanyu" />

                <TextView
                    style="@style/superview_item_text"
                    android:text="关于" />
            </LinearLayout>


            <LinearLayout
                style="@style/superview_item_layout"
                android:layout_weight="1"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/guanyu" />

                <TextView
                    style="@style/superview_item_text"
                    android:text="关于" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
