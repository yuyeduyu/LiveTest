<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/layout_backgroud"
    android:orientation="vertical">

        <TextView
            android:id="@+id/tv_note"
            android:background="@color/view_backgroud"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/text1"
            tools:text="MAC:00:00:00:00:00:00" />
    <LinearLayout
        android:background="@color/view_backgroud"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text1"
            tools:text="MAC:00:00:00:00:00:00" />

        <TextView
            android:id="@+id/channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_radiu_orange"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="信道1" />

        <TextView
            android:id="@+id/signal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="12sp"
            android:textColor="@color/primary"
            tools:text="强度:-50dBm" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:background="@color/view_backgroud"
        android:layout_marginTop="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_ap"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ApName"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="AP名称    aaaaaaaaaaa" />

            <TextView
                android:id="@+id/Mac"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                tools:text="AP-MAC    aaaaaaaaaaa" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="厂商信息     厂商" />

        <TextView
            android:id="@+id/ltime"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="更新时间  2018-12-12 " />
    </LinearLayout>
</LinearLayout>