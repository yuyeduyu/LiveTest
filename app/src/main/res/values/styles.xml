<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--Toolbar颜色-->
        <item name="colorPrimary">@color/primary</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/tran_in</item>
        <item name="android:activityOpenExitAnimation">@anim/tran_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/tran_pre_in</item>
        <item name="android:activityCloseExitAnimation">@anim/tran_pre_out</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MyToolBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">#ffffff</item>
        <!--图标颜色-->
        <item name="android:textColorSecondary">#ffffff</item>
        <!--下拉菜单背景-->
        <item name="android:colorBackground">@color/primary_dark</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="set_text">
        <item name="android:background">@drawable/background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!--tablayout 颜色-->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/primary_dark</item>
        <item name="tabIndicatorHeight">@dimen/ksw_md_thumb_shadow_inset_top</item>
        <item name="tabSelectedTextColor">@color/primary_dark</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="main_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="button" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="uploadtime_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="setText_left">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="setText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="setEdit">
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text2</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="dim_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题，设置的是decorview的背景色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 默认是有阴影背景的,加以下属性可以改变阴影度阴影 -->
    </style>

