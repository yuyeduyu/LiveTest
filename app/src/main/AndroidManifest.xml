        <activity
            android:name=".view.activity.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.SetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.LogActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activity.LogRelationActivity"
            android:screenOrientation="portrait" />
        <activity
