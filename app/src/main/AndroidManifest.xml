        <activity
            android:name=".keeplive.LiveActivity"
            android:launchMode="singleInstance"
            android:theme="@style/LiveStyle" />
        <service android:name=".keeplive.LiveService" />
        <service android:name=".util.versionUpdate.VersionUpdateService" />

        <activity android:name="com.ascend.wxldcmenu.MenuMainActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".view.activity.KaiZhanActivity" />
